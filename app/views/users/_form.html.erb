<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.text_field :name, required: true, placeholder: 'Username', class: 'form-control'  %>
  </div>
  <div class="field">
    <%= f.email_field :email, required: true, placeholder: 'Email', class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.password_field :password, required: true, placeholder: 'Password', class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.password_field :password_confirmation, required: true, placeholder: 'Confirm Password', class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit "Create Account", class: 'btn' %>
  </div>
<% end %>
