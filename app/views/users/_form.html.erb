<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, required: true %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, required: true %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, required: true %>
  </div>
  <div class="actions">
    <%= f.submit :class => "but" %>
  </div>
<% end %>
