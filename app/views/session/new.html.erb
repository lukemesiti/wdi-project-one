<p><%= link_to 'sign up?', new_user_path %></p>

<%= form_tag do %>
    <div class="field">
        <%= label_tag :username %>
        <%= text_field_tag :username %>  
    </div>
    <div class="field">
        <%= label_tag :password %>
        <%= password_field_tag :password %>    
    </div>
    <div class="actions">
        <%= submit_tag 'login', :class => "but" %>
    </div>
<% end %>