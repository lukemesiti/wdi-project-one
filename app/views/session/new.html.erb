<%= form_tag do %>
    <div class="field">
        <%= label_tag :username %>
        <%= text_field_tag :username %>  
    </div>
    <div class="field">
        <%= label_tag :password %>
        <%= password_field_tag :password %>    
    </div>
    <div class="actions">
        <div><%= submit_tag 'login', :class => "but" %></div><br>
        <div><%= link_to "Don't have a profile? Click here to sign up!", new_user_path %></div>
    </div>
<% end %>