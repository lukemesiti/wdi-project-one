<% content_for :title, @task.name %>

<div class="task-block">
    <ul>
      <li>(<%= @task.category %>)</li>
      <li><%= @task.description %></li>
      <li><%= link_to 'Edit', edit_task_path(@task), :class => "modify" %> : : <%= link_to 'Add Note', new_task_note_path(@task), :class => "modify" %></li>
  </ul>
</div>


<% if @notes.present? %>
<div class="notes-header">Notes -</div>
  <% @notes.each do |note| %>
    <div class="notes-block">
      <ul>
        <li><%= note.name %>, <%= note.details %></li>
        <li><%= link_to 'Edit', edit_note_path(note), :class => "modify" %> : : <%= link_to 'Delete', note, method: :delete, data: { confirm: 'Are you sure?' }, :class => "modify" %></li>
      </ul>
    </div>
  <% end %>
<% end %>

