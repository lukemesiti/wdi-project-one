<% content_for :title, "#{params[:category]} tasks" %>

<% unless @showing_all_tasks %>
    <div class="add_new_task">
        <%= link_to 'Add New Task', new_user_task_path(:user_id => @current_user.id, :category => @current) %>
    </div>
<% end %>

<% @tasks.each do |task| %>
    <div class="task-block">
        <ul>
            <li><%= task.name %> (<%= task.category %>) <%= link_to 'Edit', edit_task_path(task), :class => "modify" %> : : <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' }, :class => "modify" %></li>
            <% if task.description.present? %>
                <li><%= task.description %></li>
            <% end %>
            <li><%= link_to 'Add Note', new_task_note_path(task), :class => "modify" %> 
                <% if task.notes.present? %>
                 : : <%= link_to 'View Notes', task_path(task), :class => "modify" %></li>
                <% end %>
        </ul>   
    </div>
<% end %>




