<%= form_for inquiry do |f| %>
    <div>
        <%= f.label :name %><br/>
        <%= f.text_field :name, required: true %>
    </div>

    <div>
        <%= f.label :email %><br/>
        <%= f.text_field :email, required: true %>
    </div>

    <div>
        <%= f.label :message %><br/>
        <%= f.text_area :message, required: true %>
    </div>

    <div>
        <%= f.submit "Send" %>
    </div>
<% end %>