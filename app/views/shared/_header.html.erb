<div class="clearfix">
    <div>
        <h1>THREEthrees</h1>
    </div>
    <div>
        <% if logged_in? %>
            <ul>
                <li><%= link_to 'logout', session_path, :method => :delete %></li>
                <li>Welcome, <%= @current_user.name %></li>
            </ul>
        <% end %>
    </div>   
</div>

<div class="clearfix">
    <div>
        <h2><%= content_for (:title) %></h2>
    </div>

    <div class="notice">
        <%= notice %>
    </div>
    <div class="alert">
        <%= alert %>
    </div>
    <div class="alert">
        <% if @user %>
            <%= @user.errors.full_messages.first if @user.errors.any? %>
        <% end %>
    </div>
    <% if @inquiry %>
        <% if @inquiry.errors.any? %>
            <div class="alert">
                <% @inquiry.errors.full_messages.each do |msg| %>
                    <%= msg %>
                <% end %>
            </div>
        <% end %>
    <% end %>


</div>
